---
// Importaciones y configuración
import Particles from '../components/Particles.astro';

// Array de proyectos con imágenes p1.jpg a p7.jpg
const projects = [
  { 
    title: "Redes Neuronales", 
    description: "IA para diagnóstico de redes", 
    image: "/mi-portafolio2025/img/p1.jpg"  // Ruta absoluta para GitHub Pages
  },
  { 
    title: "Realidad Aumentada", 
    description: "Interfaces holográficas", 
    image: "/mi-portafolio2025/img/p2.jpg" 
  },
  { 
    title: "Computación Cuántica", 
    description: "Algoritmos del futuro", 
    image: "/mi-portafolio2025/img/p3.jpg" 
  },
  { 
    title: "Blockchain", 
    description: "Tecnología descentralizada", 
    image: "/mi-portafolio2025/img/p4.jpg" 
  },
  { 
    title: "Robótica Avanzada", 
    description: "Automatización inteligente", 
    image: "/mi-portafolio2025/img/p5.jpg" 
  },
  { 
    title: "Realidad Virtual", 
    description: "Mundos inmersivos", 
    image: "/mi-portafolio2025/img/p6.jpg" 
  },
  { 
    title: "IoT Futurista", 
    description: "Conectividad total", 
    image: "/mi-portafolio2025/img/p7.jpg" 
  }
];
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portafolio Futurista 2025</title>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
  <style>
    :root {
      --neon: #0ff;
      --dark: #0a0a20;
      --bg: linear-gradient(135deg, #121230 0%, #000000 100%);
    }
    body {
      font-family: 'Orbitron', sans-serif;
      background: var(--bg);
      color: white;
      margin: 0;
      padding: 0;
    }
    .project-card {
      transition: all 0.3s;
      background: rgba(10, 10, 30, 0.5);
      border: 1px solid rgba(0, 255, 255, 0.3);
      border-radius: 8px;
      overflow: hidden;
    }
    .project-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 20px rgba(0, 255, 255, 0.3);
      border-color: var(--neon);
    }
    @keyframes glow {
      0%, 100% { text-shadow: 0 0 10px var(--neon), 0 0 20px var(--neon); }
      50% { text-shadow: 0 0 20px var(--neon), 0 0 30px var(--neon), 0 0 40px #ff00ff; }
    }
    @keyframes float {
      0%, 100% { transform: translateY(0); }
      50% { transform: translateY(-15px); }
    }
  </style>
</head>

<body class="min-h-screen">
  <Particles />
  
  <header class="relative h-screen flex items-center justify-center overflow-hidden">
    <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1677442135136-760c813cdb02')] bg-cover bg-center opacity-30"></div>
    <div class="absolute inset-0 bg-black/70"></div>
    <h1 class="text-5xl md:text-7xl font-bold text-center relative z-10 text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-purple-600" style="animation: glow 2s infinite alternate, float 4s ease-in-out infinite">
      PORTAFOLIO 2025
    </h1>
  </header>

  <main class="container mx-auto py-12 px-4">
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {projects.map((project, index) => (
        <div class="project-card" style={`animation-delay: ${index * 100}ms`}>
          <img 
            src={project.image} 
            alt={project.title}
            class="w-full h-64 object-cover grayscale-[30%] hover:grayscale-0 transition-all duration-500"
          />
          <div class="p-4">
            <h3 class="text-xl font-bold text-cyan-400">{project.title}</h3>
            <p class="text-gray-300">{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </main>
</body>
</html>