<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Portafolio Futurista 2025</title>
  <style>
    :root {
      --neon: #0ff;
      --dark: #0a0a20;
      --bg: linear-gradient(135deg, #121230 0%, #000000 100%);
    }
    body {
      font-family: 'Orbitron', sans-serif;
      background: var(--bg);
      color: white;
      margin: 0;
      padding: 0;
    }
    .hero {
      height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      position: relative;
      overflow: hidden;
    }
    .hero-bg {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: url('https://images.unsplash.com/photo-1677442135136-760c813cdb02') center/cover;
      opacity: 0.3;
    }
    .hero-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0,0,0,0.7);
    }
    h1 {
      font-size: clamp(2.5rem, 5vw, 4rem);
      font-weight: 700;
      text-align: center;
      position: relative;
      background: linear-gradient(to right, #0ff, #f0f);
      -webkit-background-clip: text;
      background-clip: text;
      color: transparent;
      text-shadow: 0 0 10px rgba(0,255,255,0.5);
      animation: glow 2s infinite alternate;
    }
    .projects-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      padding: 2rem;
      max-width: 1200px;
      margin: 0 auto;
    }
    .project-card {
      border: 1px solid rgba(0,255,255,0.3);
      border-radius: 8px;
      overflow: hidden;
      transition: all 0.3s ease;
      background: rgba(10,10,30,0.5);
    }
    .project-card:hover {
      transform: translateY(-10px);
      box-shadow: 0 10px 20px rgba(0,255,255,0.3);
      border-color: var(--neon);
    }
    .project-img {
      width: 100%;
      height: 200px;
      object-fit: cover;
      filter: grayscale(30%);
      transition: all 0.3s ease;
    }
    .project-card:hover .project-img {
      filter: grayscale(0%) brightness(1.1);
    }
    .project-info {
      padding: 1.5rem;
    }
    .project-info h3 {
      color: var(--neon);
      margin-top: 0;
      font-size: 1.5rem;
    }
    @keyframes glow {
      0%, 100% { text-shadow: 0 0 10px var(--neon), 0 0 20px var(--neon); }
      50% { text-shadow: 0 0 20px var(--neon), 0 0 30px var(--neon), 0 0 40px #f0f; }
    }
  </style>
  <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&display=swap" rel="stylesheet">
</head>
<body>
  <header class="hero">
    <div class="hero-bg"></div>
    <div class="hero-overlay"></div>
    <h1>PORTAFOLIO FUTURISTA 2025</h1>
  </header>

  <main>
    <div class="projects-grid">
      {projects.map((project) => (
        <div class="project-card">
          <img 
            src={project.image} 
            alt={project.title}
            class="project-img"
            loading="lazy"
          />
          <div class="project-info">
            <h3>{project.title}</h3>
            <p>{project.description}</p>
          </div>
        </div>
      ))}
    </div>
  </main>
</body>
</html>